FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
	volScalarFieldValue z0 0
);

regions
(
   boxToCell
   {
     box (0 0 0) (0.5 0.1 0.1);
     fieldValues
	(
	   volScalarFieldValue z0 0.1 
     	);
   }
);

