FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         Gauss linear;
    div(phi,C)      Gauss upwind;
}

laplacianSchemes
{
    default         	Gauss linear corrected;;
}

interpolationSchemes
{
    default		linear;
    K			harmonic;
    pc   		linear;
    krtheta         	upwind phi;
}

snGradSchemes
{
    default         corrected;
}

fluxRequired
{
    default         no;
    p           ;
}


