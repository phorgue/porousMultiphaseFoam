FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     groundwaterTransportFoam;

startFrom       startTime;

startTime       0.0;

stopAt          endTime;

endTime         50000;

deltaT          1e-2;

writeControl    adjustableRunTime;

writeInterval   5000;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

adjustTimeStep  yes;

runTimeModifiable yes;

maxDeltaT	1000;

//- for Picard time step control
timeStepControl Picard;
dTFactIncrease  1.2;
dTFactDecrease  0.8;
nIterStability  5;
minIter 3;

//- for h variation time step control
//timeStepControl dthetamax;
//dthetamax           0.005;

//- for tracer time step control
dCmax       0.01;
dCresidual      1e-3;

CSVoutput  true;

eventTimeTracking true;

