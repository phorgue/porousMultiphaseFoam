FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     porousShallowWaterFoam;

startFrom       startTime;

startTime       0.0;

stopAt          endTime;

endTime         172800;

deltaT          1;

writeControl    adjustableRunTime;

writeInterval   86400;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

adjustTimeStep  yes;

runTimeModifiable yes;

dhmax           0.01;

maxDeltaT	1000;

