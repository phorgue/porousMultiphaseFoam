FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     porousScalarTransportFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         86400;

deltaT          100;

writeControl    adjustableRunTime;

writeInterval   7200;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

adjustTimeStep yes;

runTimeModifiable true;

dCmax_abs       2e-4;

dCmax_rel       0.05;

maxDeltaT       10000;

