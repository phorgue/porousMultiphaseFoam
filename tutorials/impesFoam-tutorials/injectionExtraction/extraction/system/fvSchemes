FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
}

laplacianSchemes
{
    default         	Gauss linear corrected;;
}

interpolationSchemes
{
    default		none;
    K			harmonic;
    pc		        linear;
    kra          	upwind phia;
    krb	                upwind phib;
    flux(U)             linear;   
}

snGradSchemes
{
    default         corrected;
}

fluxRequired
{
    default         no;
    p           ;
}

