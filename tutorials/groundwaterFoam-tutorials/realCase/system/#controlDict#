FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     SbRichardsFoam;

startFrom       latestTime;

startTime       0.0;

stopAt          endTime;

endTime         86400000;

deltaT          600;

writeControl    adjustableRunTime;

writeInterval   8640000;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

adjustTimeStep  yes;

runTimeModifiable yes;

dTFactIncrease  1.1;

dTFactDecrease  0.9;

maxDeltaT	1e9;

