FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "theta|h"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-12;
        relTol          0;
    }

}

Picard
{
    tolerance 1e-2;
    dTFact      1.2; // 1.2 by default
    maxIter 10; // 10 by default
    minIter 3; // 3 by default 
    maxIterStability  5; // 5 by default
}

