FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location        system;
    object          sampleDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs ("libsampling.so");

interpolationScheme cellPoint; 

setFormat gnuplot;

surfaceFormat   vtk;

sets
(
    acrossFlow
    {
        type    lineCell;
        axis    y;
        start   (0.03 0.60 0.03);
        end     (0.03 0 0.03);
    }
);

surfaces        ();

fields          ( h );

